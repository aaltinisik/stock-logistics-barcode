<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_product_category_simple_ean_form" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view" />
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="ean_sequence_id" domain="[('barcode_sequence', '=', 1)]"
                        context="{'default_name': name and 'EAN ' + name or 'EAN', 'default_barcode_sequence': 1}" />
                    <newline />
                </field>
            </field>
        </record>

        <record id="view_product_simple_ean_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="ean13" position="after">
                    <field name="ean_sequence_id" domain="[('barcode_sequence', '=', 1)]"
                        attrs="{'invisible': [('ean13', '!=', False)]}"
                        context="{'default_name': name and 'EAN ' + name or 'EAN', 'default_barcode_sequence': 1}" />
                    <button string="Generate the EAN13" name="generate_ean13"
                        attrs="{'invisible': [('ean13', '!=', False)]}"
                        type="object" colspan="2" />
                </field>
            </field>
        </record>
        
        <record id="action_server_generate_barcode" model="ir.actions.server">
            <field name="name">Generate Product Code</field>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_product" />
            <field name="state">code</field>
            <field name="code">object.action_generate_ean13()</field>
        </record>

        <record model="ir.values" id="action_server_generate_barcode">
            <field name="name">action_server_generate_barcode</field>
            <field name="action_id" ref="action_server_generate_barcode" />
            <field name="value" eval="'ir.actions.server,' + str(ref('action_server_generate_barcode'))" />
            <field name="key">action</field>
            <field name="model_id" ref="model_product_product" />
            <field name="model">product.product</field>
            <field name="key2">client_action_multi</field>
        </record>
        
        
        

    </data>
</openerp>
